<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:padding="20dp"
    android:elevation="50dp"
    android:layout_marginVertical="20dp"
    tools:context=".DetailPesananActivity">

    <TextView
        android:id="@+id/text_pemesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="20dp"
        android:text="Nama Pemesan            :"
        android:fontFamily="@font/poppinsbold"/>

    <EditText
        android:id="@+id/edit_pemesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_pemesan"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/text_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_pemesan"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/poppinsbold"
        android:text="Nama Barang                 :"/>

    <EditText
        android:id="@+id/edit_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_pemesan"
        android:minLines="2"
        android:layout_below="@id/text_pemesan"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/text_jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_nama"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/poppinsbold"
        android:text="Jumlah Barang             :"/>

    <EditText
        android:id="@+id/edt_jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_pemesan"
        android:layout_below="@id/edit_nama"
        android:layout_alignParentEnd="true"
        android:inputType="number"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/text_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_jumlah"
        android:layout_marginVertical="30dp"
        android:text="Harga Barang                 :"
        android:fontFamily="@font/poppinsbold"/>

    <EditText
        android:id="@+id/edit_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_pemesan"
        android:layout_below="@id/edt_jumlah"
        android:layout_alignParentEnd="true"
        android:inputType="numberDecimal"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/text_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edit_harga"
        android:layout_marginVertical="30dp"
        android:text="Tanggal Dipesan          :"
        android:fontFamily="@font/poppinsbold"/>

    <EditText
        android:id="@+id/edit_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_pemesan"
        android:layout_below="@id/edit_harga"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/text_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edit_tanggal"
        android:layout_marginVertical="30dp"
        android:text="Tanggal Update             :"
        android:fontFamily="@font/poppinsbold"/>

    <EditText
        android:id="@+id/edit_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_pemesan"
        android:layout_below="@id/edit_tanggal"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginStart="50dp"/>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_update"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="30dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Delete"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_update"
        android:layout_toStartOf="@id/delete_button"
        android:layout_marginVertical="30dp"
        android:layout_marginEnd="20dp"
        android:text="save"/>

</RelativeLayout>